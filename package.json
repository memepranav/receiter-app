{
  "name": "quran-reciter-platform",
  "version": "1.0.0",
  "description": "Quran Reciter App - Complete Monorepo Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:api": "pnpm --filter api dev",
    "dev:admin": "pnpm --filter admin dev",
    "build": "pnpm run --recursive build",
    "build:api": "pnpm --filter api build",
    "build:admin": "pnpm --filter admin build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:generate": "pnpm --filter database generate",
    "db:push": "pnpm --filter database push",
    "db:seed": "pnpm --filter database seed",
    "db:studio": "pnpm --filter database studio",
    "blockchain:build": "pnpm --filter blockchain build-program",
    "blockchain:deploy": "pnpm --filter blockchain deploy",
    "clean": "pnpm --filter admin clean && pnpm --filter api clean"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "turbo": "^1.10.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}